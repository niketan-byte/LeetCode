/*
// Definition for a Node.
class Node {
public:
    int val;
    vector<Node*> children;

    Node() {}

    Node(int _val) {
        val = _val;
    }

    Node(int _val, vector<Node*> _children) {
        val = _val;
        children = _children;
    }
};
*/

class Solution {
public:
    vector<vector<int>> levelOrder(Node* root) {
        if(root==NULL)
        {
            return {};
        }
        vector<vector<int>>res;
        queue<Node*>q;
        q.push(root);
        while(!q.empty())
        {
            int n=q.size();
            vector<int>lev;
            
            for(int i=0;i<n;i++)
            {
              Node* tem = q.front();
                q.pop();
                lev.push_back(tem->val);
                for(auto i:tem->children)
                {
                    q.push(i);
                }
            }
            res.push_back(lev);
        }
        return res;
    }
};
