/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    bool hasCycle(ListNode *head) {
        if(!head || head->next==NULL)
        {
            return false;
        }
        ListNode* slow = head;
        ListNode* fast = slow;
        while(fast && fast->next!=NULL)
        {
            fast = fast->next->next;
            slow = slow->next;
            if(slow==fast)
            {
                return 1;
            }
        }
        return 0;
    }
};
