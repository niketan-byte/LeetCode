class Solution {
public:
    vector<int> addToArrayForm(vector<int>& digits, int k) {

        for(int i=digits.size()-1;i>=0 && k>0;i--)
            {
                digits[i] += k;
                k = digits[i]/10;
                digits[i] %= 10;
            }
        while(k>0)
        {
            digits.insert(digits.begin(),k%10);
            k/=10;
        }
        return digits;
    }
};
