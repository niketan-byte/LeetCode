class Solution {
public:
    int minPairSum(vector<int>& nums) {
     int mx = 0;
        for(int i=0;i<nums.size();i++)
        {
            mx = max(mx,nums[i]);
        }
         vector<int>arr(mx+1,0);
        for(int i=0;i<nums.size();i++)
        {
            arr[nums[i]]++;
        }
        int temp=0;
        int i=0,j=mx;
        while(i<=j)
        {
            if(arr[i]==0)
            {
             i++;
                continue;
            }
             if(arr[j]==0)
            {
             j--;
                continue;
            }
            if(arr[i]!=0 && arr[j]!=0)
            {
                if(i+j>temp)
                {
                    temp=i+j;
                }
                arr[i]--;
                arr[j]--;
            }
        }
        return temp;
    }
};
