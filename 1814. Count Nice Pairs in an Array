class Solution {
public:
    int revNum(int n) {
        int rev=0;
        while(n>0)
        {
            rev = rev*10 + n%10;
            n /= 10;
        }
        return rev;
    }
    int countNicePairs(vector<int>& nums) {
    unordered_map<int,int>mp;
     for(int n:nums)
     {
         int temp = n - revNum(n);
         if(mp.find(temp)!=mp.end()){
             mp[temp]++;
         }
         else {
             mp[temp]=1;
         }
     }

     long long int res = 0;
     int mod = 1e9+7;
     for(auto i:mp)
     {
         res = (res%mod + (long long int)i.second*((long long int)i.second-1)/2)%mod;
     }
     return res;

    }
};

