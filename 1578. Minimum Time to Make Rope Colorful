class Solution {
public:
    int minCost(string colors, vector<int>& neededTime) {
        int n = neededTime.size();
        char prev='A';
        int prevTime=0;
        int cc=0,pc=0;
        for(int i=1;i<=n;i++){
            if(colors[i-1]==prev){
                cc = pc + min(neededTime[i-1],prevTime);
                prevTime = max(neededTime[i-1],prevTime);
            }
            else{
                cc = pc;
                prev=colors[i-1];
                prevTime = neededTime[i-1];
            }
            pc = cc;
        }
        
        return pc;
    }
};
