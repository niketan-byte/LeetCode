class Solution {
public:

    vector<vector<int>> minimumAbsDifference(vector<int>& arr) {
      int mn =INT_MAX;
        vector<vector<int>>vec;
        sort(arr.begin(),arr.end());
        for(int i=0;i<arr.size()-1;i++)
        {
             mn = min(arr[i+1]-arr[i],mn);
        }
        for(int i=0;i<arr.size()-1;i++)
        {
            if(mn==(arr[i+1]-arr[i]))
            {
                vec.push_back({arr[i],arr[i+1]});
            }
        }
        return vec;
    }
};
