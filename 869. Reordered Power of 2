class Solution {
public:
    bool reorderedPowerOf2(int n) {
       string res = sorted(n);
        for(int i=0;i<30;i++)
        {
            if(res == sorted(1<<i))
            {
                return true;
            }
        }
        
        return false;
    }
    string sorted(int n)
    {
        string str = to_string(n);
        sort(str.begin(),str.end());
        return str;
    }
};
