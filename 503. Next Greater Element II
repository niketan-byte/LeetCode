class Solution {
public:
    vector<int> nextGreaterElements(vector<int>& nums) {
        // brute force
        
        // vector<int>ans(nums.size(),-1);
        // for(int i=0;i<nums.size();i++)
        // {
        //     int j=i+1;
        //     int ele = nums[i];
        //     while(j%nums.size()!=i)
        //     {
        //         if(ele<nums[j%nums.size()])
        //         {
        //             ans[i]=nums[j%nums.size()];
        //             break;
        //         }
        //         else{
        //         j++;
        //         }
        //     }
        // }
        
        // Stack  
        
        stack<int>st;
        vector<int>ans(nums.size(),-1);
        for(int i=0;i<nums.size()*2;i++)
        {
            int idx = i>=nums.size()?i-nums.size():i;
            while(!st.empty() && nums[idx]>nums[st.top()])
            {
                ans[st.top()]=nums[idx];
                st.pop();
            }
            if(ans[idx]==-1)
            {st.push(idx);}
        }
        return ans;
    }
};
