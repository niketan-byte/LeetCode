class Solution {
public:
    int valid(int mid,int k, vector<int>nums)
    {
        int cnt=0;
        for(int i=0;i<nums.size();i++)
        {
          if(nums[i]<=mid)
          {
              cnt++;
              i++;   // because adjacent nhi lena he, if we select
          }

        }
        return cnt>=k;
    }
    int minCapability(vector<int>& nums, int k) {
      int n = nums.size();
      int l=1;
      int r=1e9;
      while(l<r)
      {
           int mid = (l+r)/2;
           if(valid(mid,k,nums))
           {
               r = mid;
           } 
           else{
               l=mid+1;
           }
      }
      return l;
    }
};
