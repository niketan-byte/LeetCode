class Solution {
public:
    int lengthOfLastWord(string s) {
        int curr=0,ans=0,prev=0;
       bool flag=0;
        for(int i=s.size()-1;i>=0;i--)
        {
           if((s[i]>='a' && s[i]<='z') || (s[i]>='A' && s[i]<='Z'))
           {
               flag=1;
              ans++;
           }
            else{
                if(flag)
                {
                    return ans;
                }
            }
        }
        
        return ans;
    }
};
