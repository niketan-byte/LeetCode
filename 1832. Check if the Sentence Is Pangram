class Solution {
public:
    bool checkIfPangram(string sentence) {
       vector<int>fa(26,0);
        for(int i=0;i<sentence.size();i++)
        {
            fa[sentence[i]-'a']++;
        }
        for(auto i:fa)
        {
            if(i==0)
            {
                return 0;
            }
        }
        return 1;
    }
};
