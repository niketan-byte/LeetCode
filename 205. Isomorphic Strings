class Solution {
public:
    bool isIsomorphic(string s, string t) {
        map<char,char>s_mp;
        map<char,char>t_mp;
        int i;
        for(i=0;i<s.size();)
        {
if((s_mp[s[i]] && s_mp[s[i]]!=t[i]) || t_mp[t[i]] && t_mp[t[i]]!=s[i])
            {
return 0;
            }
            else{
                s_mp[s[i]]=t[i];
                t_mp[t[i]]=s[i];
                i++;
            }
        }
        return 1;
    }
};
