class Solution {
public:
    int maximizeSum(vector<int>& nums, int k) {
        int ans=0;
        priority_queue<int>pq;
        for(int i=0;i<nums.size();i++)
        {
            pq.push(nums[i]);
        }
        while(k--)
        {
            int a = pq.top();
            ans += a;
            pq.pop();
            pq.push(a+1);
        }
        return ans;

        // int mx = *max_element(nums.begin(),nums.end());
        // return k*mx + k*(k-1)/2;

    }
};
