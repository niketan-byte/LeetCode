class Solution {
public:
    int countKDifference(vector<int>& nums, int k) {
        int ans=0;
        int n=nums.size();
        for(int i=0;i<n-1;i++)
        {
            for(int j=i;j<n;j++)
            {
                if(k==abs(nums[j]-nums[i]))
                {
                    ans++;
                }
            }
        }
        return ans;
    }
};
