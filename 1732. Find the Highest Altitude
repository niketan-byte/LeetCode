class Solution {
public:
    int largestAltitude(vector<int>& gain) {
        vector<int>prefixSum(gain.size()+1);
        prefixSum[0]=0;
        for(int i=0;i<gain.size();i++)
        {
           prefixSum[i+1] = gain[i] + prefixSum[i];
        }
        return *max_element(prefixSum.begin(),prefixSum.end());
    }
};

class Solution {
public:
    int largestAltitude(vector<int>& gain) {
      int ans=0,curr=0;
        for(auto i:gain)
        {
             curr+=i;
                ans = max(ans,curr);
        }
        return ans;
    }
};
