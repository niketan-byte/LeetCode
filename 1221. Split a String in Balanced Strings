class Solution {
public:
    int balancedStringSplit(string s) {
        int bal=0;
        int ans=0;
        for(int i=0;i<s.size();i++)
        {
            if(s[i]=='L')
            {
                bal+=1;
            }
            if(s[i]=='R')
            {
                bal-=1;
            }
            if(bal==0)
            {
                ans+=1;
            }
        }
        return ans;
    }
};
