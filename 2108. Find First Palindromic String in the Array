class Solution {
public:
bool ispalindromic(string str)
{
    for(int i=0;i<str.size()/2;i++)
    {
        if(str[i]!=str[str.size()-i-1])
        {
            return 0;
        }
    }
    return 1;
}
    string firstPalindrome(vector<string>& words) {
        for(int i=0;i<words.size();i++)
        {
            if(ispalindromic(words[i]))
            {
                return words[i];
            }
        }
        return "";
    }
};
