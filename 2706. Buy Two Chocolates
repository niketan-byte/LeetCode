class Solution {
public:
    int buyChoco(vector<int>& prices, int money) {
        int a=INT_MAX;
        int b=INT_MAX;

        for(int i=0;i<prices.size();i++)
        {
            if(prices[i]<a)
            {
                b=a;
                a=prices[i];
            }
            else if(prices[i]<b && a<b)
            {
                b=prices[i];
            }
        }
        if(money>=(a+b))
        {
            return money-(a+b);
        }
        return money;
    }
};
