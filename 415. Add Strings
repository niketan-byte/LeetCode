class Solution {
public:
    string addStrings(string num1, string num2) {
        int a = num1.size()-1;
        int b = num2.size()-1;
        int carry=0;
        string ans="";
        while(a>=0 || b>=0 ||carry)
        {
            long long int sum=0;
            if(a>=0){
                 sum += num1[a]-'0';
                 a--;
            }
            if(b>=0)
            {
                sum += num2[b]-'0';
                b--;
            }
            sum += carry;
            carry = sum/10;    
            sum =  sum%10;
            ans += to_string(sum);
        }
        reverse(ans.begin(),ans.end());
return ans;
    }
};
