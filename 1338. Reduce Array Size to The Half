class Solution {
public:
    int minSetSize(vector<int>& arr) {
        map<int,int>mp;
        int n = arr.size();
        for(int i=0;i<n;i++)
        {
            mp[arr[i]]++;
        }
        vector<int>v;
        for(auto it:mp)
        {
            v.push_back(it.second);
        }
        sort(v.rbegin(),v.rend());
        int ans=0,del=0;
        for(int i=0;i<v.size();i++)
        {
            del += v[i];
            ans++;
            if(del>=n/2)
            {
                return ans;
            }
        }
        return -1;
    }
};
