class Solution {
public:
    string oddString(vector<string>& words) {
       map<vector<int>,vector<string>>mp;
       for(int i=0;i<words.size();i++)
       {
           vector<int>diff;
           for(int j=0;j<words[i].size()-1;j++)
           {
                diff.push_back(words[i][j+1]-words[i][j]);
           }
           mp[diff].push_back(words[i]);
       }
       string ans;
       for(auto i:mp)
       {
           if(i.second.size()==1)
           {
               ans = i.second[0];
              return ans;
           }
       }
    return ans;
    }
};
