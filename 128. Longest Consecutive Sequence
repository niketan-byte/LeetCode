class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        unordered_map<int,int>m;
        for(int i=0;i<nums.size();i++){
         m[nums[i]]=1;
        }
        int ans=0;
        for(int i=0;i<nums.size();i++)
        {
            if(m.find(nums[i]-1)!=m.end())
            {
                continue;
            }
            else{
                int k=nums[i];
                while(m.find(k)!=m.end())
                {
                    k++;
                }
                ans = max(ans,k-nums[i]);
            }
            
        }
        return ans;
    }
};
