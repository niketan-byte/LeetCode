// class Solution {
// public:
//     int minCostToMoveChips(vector<int>& position) {
//         int count[2] = {};
//         for(auto i:position)
//         {
//             ++count[i%2];
//         }
//         return min(count[0],count[1]);
//     }
// };

class Solution {
public:
    int minCostToMoveChips(vector<int>& position) {
    int odd=0,even=0;
        for(int i=0;i<position.size();i++)
        {
            if(position[i]%2)
            {
               odd++; 
            }
            else{
                even++;
            }
        }
        return min(odd,even);
    }
};
