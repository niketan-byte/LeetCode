class Solution {
public:
    bool isValidSudoku(vector<vector<char>>& board) {
        
        for(int i=0;i<board.size();i++)
        {
            for(int j=0;j<board[i].size();j++)
            {
                if(board[i][j]!='.')
                {
                    int temp = board[i][j];
                     board[i][j]  = '*';
                    for(int k=0;k<board.size();k++)
                    {
                        if(board[i][k]==temp)
                        {
                            return false;
                        }
                        if(board[k][j]==temp)
                        {
                            return false;
                        }
                        if(board[i/3 *3 + k/3] [  j/3 * 3 +   (k%3)  ] == temp)
                         {
                            return false;
                         }
                        //  return true;
                    }
                    board[i][j] =  temp;
                }
            }
        }
        return 1;
    }
};
