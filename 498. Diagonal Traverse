class Solution {
public:
    vector<int> findDiagonalOrder(vector<vector<int>>& mat) {
       vector<int>res;
        map<int,vector<int>>mp;
        int m=mat.size();
        int n=mat[0].size();
        
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                mp[i+j].push_back(mat[i][j]);
            }
        }
        for(auto i:mp)
        {
            if((i.first)%2==0)
            {
                reverse(i.second.begin(),i.second.end());
            }
            for(auto k:i.second)
            {
                res.push_back(k);
            }
        }
        return res;
    }
};
