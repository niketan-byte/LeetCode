class Solution {
public:
    int minimumCost(vector<int>& cost) {
        int sum=0;
        if(cost.size()<3)
        {
            sum = accumulate(cost.begin(),cost.end(),0);
            return sum;
        }
        sort(cost.begin(),cost.end(),greater<int>());
    
        for(int i=0;i<cost.size();i++)
        {
            if((i+1)%3)
            {
                sum += cost[i];
            }
        }
        return sum;
    }
};
