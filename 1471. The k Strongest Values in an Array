class Solution {
public:
    vector<int> getStrongest(vector<int>& arr, int k) {
        vector<int>a;
        sort(arr.begin(),arr.end());
        int m1 = (arr.size()-1)/2;
         int m = arr[m1];
        vector< pair <int,int> > v;

        for(int i=0;i<arr.size();i++)
        {
            int sub = abs(arr[i]-m);
            v.push_back( make_pair(sub,i));
        }
      sort(v.begin(), v.end(), greater<pair<int,int>>());
        
        for(int i=0;i<k;i++)
        {
            a.push_back(arr[v[i].second]);
        }
        return a;
    }
};
