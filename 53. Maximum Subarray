class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int curr=0;
        int max=INT_MIN;
        for(int i=0;i<nums.size();i++)
        {
            curr += nums[i];
            if(max<curr)
            {
                max =curr;
            }
            if(curr<0)
            {
                curr=0;
            }
        }
        return max;
    }
};

class Solution {
public:
    int maxSubArray(vector<int>& nums) {
    int sum=0;
    int mx=nums[0];
    for(auto i:nums)
    {
        sum += i;
       mx=max(mx,sum);
       if(sum<0)
       {
           sum=0;
       }       
    }
    return mx;
    }
};
