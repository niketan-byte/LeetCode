class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int numZeroes=0;
        int ans=0,start=0;
        for(int i=0;i<nums.size();i++)
        {
            numZeroes += (nums[i]==0);
            while(numZeroes>1)
            {
                numZeroes -= (nums[start++]==0);
            }
            ans = max(ans,i-start);
        }
        return ans;
    }
};
