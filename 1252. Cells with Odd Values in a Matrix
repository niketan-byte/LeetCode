class Solution {
public:
    int oddCells(int m, int n, vector<vector<int>>& indices) {
        vector<vector<int>>mat(m,vector<int>(n,0));
        for(int i=0;i<indices.size();i++)
        {
            int row = indices[i][0];
            int col = indices[i][1];
            for(int j=0;j<n;j++)
            {
                mat[row][j] += 1;
            }
            for(int k=0;k<m;k++)
            {
                mat[k][col] += 1;
            }
        }
        int ans=0;
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(mat[i][j]%2)
                {
                    ans++;
                }
                cout<<mat[i][j]<<" ";
            }
        }
        return ans;
    }
};
