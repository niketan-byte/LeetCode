class Solution {
public:
    vector<int> rowAndMaximumOnes(vector<vector<int>>& mat) {
        int m=mat.size();
        int n=mat[0].size();
        vector<int>vec(2,0);
        map<int,int>mp;
        int one=0;
        for(int i=0;i<m;i++)
        {
            
            one=0;
            for(int j=0;j<n;j++)
            {
               if(mat[i][j]==1)
               {
                   one +=1;
               }
            }
           mp[i]=one;
        }
            auto pr = std::max_element(mp.begin(), mp.end(), [](const auto &x, const auto &y) {
                    return x.second < y.second;
                });
                vec.push_back(pr->first);
                vec.push_back(pr->second);
        return vec;
    }
};
