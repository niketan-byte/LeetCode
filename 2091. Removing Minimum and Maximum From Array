class Solution {
public:
    int minimumDeletions(vector<int>& nums) {
        // if(nums.size()==1 || nums.size()==2)
        // {
        //     return nums.size();
        // }
        int a = max_element(nums.begin(),nums.end()) - nums.begin();
        int b = min_element(nums.begin(),nums.end()) - nums.begin();
        int N = nums.size();
        // int a = mx-nums.size()-1;
        // int mx1 = min(mx,abs(a));
        // int b = mn-nums.size()-1;
        // int mn1 = min(mn,abs(b));
        if (a > b) swap(a, b);
        return min({ a + 1 + N - b, b + 1, N - a });
    }
};
