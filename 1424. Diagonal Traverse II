class Solution {
public:
    vector<int> findDiagonalOrder(vector<vector<int>>& nums) {
        vector<int>ans;
        unordered_map<int,vector<int>>mp;
        for(int i=nums.size()-1;i>=0;i--)
        {
            for(int j=0;j<nums[i].size();j++)
            {
             int dia = i+j;
             mp[dia].push_back(nums[i][j]);   
            }
        }
        int i=0;
        while(mp.find(i)!=mp.end())
        {
            for(auto n:mp[i])
            {
                ans.push_back(n);
            }
            i++;
        }
        return ans;
    }
};
