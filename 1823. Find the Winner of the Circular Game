class Solution {
public:
    int findTheWinner(int n, int k) {
        // return help(n,k)+1;
        // iterative
        int ans=0;
        for(int i=2;i<=n;i++)
        {
         ans = (ans+k)%i;
        }
        return ans+1;
    }


    // recursive
    int help(int n,int k)
    {
        if(n==1)
        {
            return 0;
        }
        return (help(n-1,k)+k)%n;
    }
};
