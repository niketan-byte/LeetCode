class Solution {
public:
    bool valid(vector<int>&nums,int mid)
    {
        long long int sum=0;
       for(int i=0;i<nums.size();i++)
       {
       sum += nums[i];
       if(sum > (long long int)mid*(i+1))
       {
           return false;
       }
       }
       return true;
    }
    int minimizeArrayValue(vector<int>& nums) {
        int n = nums.size();
        
            int low = 0;
            int high = *max_element(nums.begin(),nums.end());
            while(low<high)
            {
                int mid = low + (high-low)/2;
                if(valid(nums,mid))
                {
                    high = mid;
                }
                else{
                    low=mid+1;
                }
            }
        return low;
    }
};
