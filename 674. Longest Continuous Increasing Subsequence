class Solution {
public:
    int findLengthOfLCIS(vector<int>& nums) {
        int ans=1,count=1;
        for(int i=0;i<nums.size()-1;i++)
        {
            if(nums[i]<nums[i+1])
            {
                count+=1;
               
            }
            else{
                ans=max(ans,count);
                count=1;
            }
        }
        ans = max(count,ans);
        return ans;
    }
};


