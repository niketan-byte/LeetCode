class Solution {
public:
    int getWinner(vector<int>& arr, int k) {
         int n = arr.size();
         unordered_map<int,int>mp;
         int i=0,j=1;
         while(i<n && j<n){
             if(arr[i]>arr[j])
             {
                 mp[arr[i]]++;
             }
             else if(arr[i]<arr[j])
             {
                 mp[arr[j]]++;
                 i=j;
             }
             if(mp[arr[i]]==k)
             {
                 return arr[i];
             }
             j++;
         }
         return *max_element(arr.begin(),arr.end());
    }
};
