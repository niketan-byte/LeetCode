class Solution {
public:
    void reverseString(vector<char>& s) {
        //keep a pointer to track left end of string
        int i=0;
        //keep a pointer to track right end 
        int j=s.size()-1;
        while(i<j)
        {
            swap(s[i],s[j]);
            i++;
            j--;
        }
    }
};
