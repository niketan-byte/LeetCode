class Solution {
public:
    int romanToInt(string s) {
        int res=0;
        
      
        unordered_map<char, int> T = 
        { 
            { 'I' , 1 }, 
            { 'V' , 5 }, 
            { 'X' , 10 },
            { 'L' , 50 }, 
            { 'C' , 100 }, 
            { 'D' , 500 }, 
            { 'M' , 1000 } 
        };
        int sum = T[s.back()];
        for(int i = s.length() - 2; i >= 0; --i){
            sum +=  (T[s[i]] < T[s[i+1]] ? -T[s[i]] : T[s[i]]);
        }
        return sum;
    }
};



class Solution {
public:
int romanToInt(string s) {
    unordered_map<char,int> mp{
        {'I',1},
        {'V',5},
        {'X',10},
        {'L',50},
        {'C',100},
        {'D',500},
        {'M',1000},
    };
    int ans =0;
    for(int i=0;i<s.size();i++){
        if(mp[s[i]]<mp[s[i+1]])
            ans-=mp[s[i]];
        else
            ans+=mp[s[i]];
    }
    return ans;
    
}
};
