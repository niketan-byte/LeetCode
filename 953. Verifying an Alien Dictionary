class Solution {
public:
    bool isAlienSorted(vector<string>& words, string order) {
        map<char,int>mp;
        for(int i=0;i<order.size();i++)
        {
            mp[order[i]]=i;
        }
        for(int i=1;i<words.size();i++)
        {
            string f=words[i-1];
            string s=words[i];
            int n = min(f.length(),s.length());
            bool flag=0;
            for(int j=0;j<n;j++)
            {
                if(mp[f[j]]<mp[s[j]])
                {
                    flag=1;
                     break;
                }
                if(mp[f[j]]>mp[s[j]])
                {
                    return false;
                }
            }
            if(!flag && f.length()>s.length())
            {
                return false;
            }
        }
        return true;
    }
};
