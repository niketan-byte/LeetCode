class Solution {
public:
    vector<string> summaryRanges(vector<int>& nums) {
        vector<string>ans;
        for(int i=0;i<nums.size();i++)
        {
            string res="";
            int j=i;
            while(j+1<nums.size() && nums[j]+1==nums[j+1])
            {
                j++;
            }
            if(j>i){
            res += to_string(nums[i]) + "->" + to_string(nums[j]);
            }
            else
            {
               res += to_string(nums[j]);
            }
            i=j;
            ans.push_back(res);
        }

        return ans;
    }
};
