class Solution {
public:
    int minMoves2(vector<int>& nums) {
        sort(nums.begin(),nums.end());
        int ans=0;
        if(nums.size()%2!=0)
        {
            int m = nums[nums.size()/2];
            for(int i=0;i<nums.size();i++)
            {
                ans += abs(m-nums[i]);
            }
        }
        else{
            int m = (nums[nums.size()/2] + nums[nums.size()/2-1])/2;
            for(int i=0;i<nums.size();i++)
            {
                ans += abs(m-nums[i]);
            }
        }
        return ans;
    }
};
