class Solution {
public:
    int largestSubmatrix(vector<vector<int>>& mat) {
        int m=mat.size(),n=mat[0].size();
        int ans=0;
        //col wise
        for(int j=0;j<n;j++)
        {
            for(int i=1;i<m;i++)
            {
                if(mat[i][j]==1)
                {
                    mat[i][j] += mat[i-1][j];
                }
            }
        }

        for(int i=0;i<m;i++)
        {
        sort(mat[i].begin(),mat[i].end(),greater<int>());
        for(int j=0;j<n;j++)
        {
            ans = max(ans,mat[i][j]*(j+1));
        }
        }
        return ans;
    }
};
