class Solution {
public:
    int largestInteger(int num) {
    string s=to_string(num);
        int n = s.size();
        vector<int>e;
        vector<int>o;
        for(int i=0;i<n;i++)
    {
        int a = s[i]-'0';
        if(a%2==0)
        {
            e.push_back(a);
        }
            else{
                o.push_back(a);
            }
    }
      sort(e.begin(),e.end(),greater<int>());
      sort(o.begin(),o.end(),greater<int>());
  
        int a=0,b=0;
        for(int i=0;i<n;i++)
        {
            int c=s[i]-'0';
            if(c%2==0)
            {
                s[i]=e[a++]+'0';
            }
            else{
                s[i]=o[b++]+'0';
            }
        }
     num=stoi(s);
        return num;
    }
};
