class Solution {
public:
    int maxProduct(vector<int>& nums) {
     int mx=INT_MIN;
     int l=1;
     int r=1;
     for(int i=0;i<nums.size();i++)
     {
         l =l*nums[i];
         r = r*nums[nums.size()-1-i];
         mx = max(mx,max(l,r));
         if(l==0)
         {
             l=1;
         }
         if(r==0)
         {
             r=1;
         }
     }
     return mx;   
    }
};
