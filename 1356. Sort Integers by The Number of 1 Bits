
class Solution {
public:
 bool static cmp(int x,int y)
        {   int a = x;
            int b = y;
            int cnt_x=0,cnt_y=0;
            while(x)
            {
               x = x&(x-1);
               cnt_x++;
            }
            while(y)
            {
                y = y&(y-1);
                cnt_y++;
            }
            if(cnt_x==cnt_y)
            {
                return a<=b;
            }
            else{
            return cnt_x<cnt_y;
            }
        }
    vector<int> sortByBits(vector<int>& arr) {
         sort(arr.begin(),arr.end(),cmp);
            return arr;
    }


};
