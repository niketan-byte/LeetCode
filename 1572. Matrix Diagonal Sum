class Solution {
public:
    int diagonalSum(vector<vector<int>>& mat) {
        int n = mat.size();
        int sum=0;
        
        for(int i=0;i<n;i++)
        {
            sum += mat[i][i];
        }
            for(int i=0;i<n;i++)
            {
                sum += mat[i][n-i-1];
            }
        if(n%2!=0){
        sum = sum - mat[n/2][n/2]; 
            return sum;
        }
    return sum;
    }
};


class Solution {
public:
    int diagonalSum(vector<vector<int>>& mat) {
        int n = mat.size();
        int m = mat[0].size();
        int ans=0;
        for(int i=0;i<n;i++)
        {
                if(i!=n-1-i)
                {
                    ans += mat[i][i] + mat[i][n-i-1];
                }
                else
                ans += mat[i][i];
            
        }
        return ans;
    }
};
