class Solution {
public:
    int splitNum(int num) {
        string str = to_string(num);
        string a="";
        string b="";
        sort(str.begin(),str.end());
     
        for(int i=0;i<str.size();i+=2)
        {
             a+=str[i];
        }
        for(int i=1;i<str.size();i+=2)
        {
             b+=str[i];
        }
        int ans = stoi(a)+stoi(b);
        return ans;
    }
};
