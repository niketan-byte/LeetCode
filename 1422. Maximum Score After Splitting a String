class Solution {
public:
    int maxScore(string s) {
        int mx=0;
        int zero=0;
        int one = count(s.begin(),s.end(),'1');
        for(int i=0;i<s.size()-1;i++)
        {
            zero += (s[i]=='0');
            one -= (s[i]=='1');
            mx = max(mx,zero+one);
        }
        return mx;
    }
};
