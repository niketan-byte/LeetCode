class Solution {
public:
    vector<vector<int>> generateMatrix(int n) {
    int startRow = 0;
    int startCol = 0;
    int endRow = n-1;
    int endCol = n-1;
 int j=1;
        vector<vector<int>> matrix(n,vector<int>(n,0));
    while(startRow<=endRow && startCol<=endCol)
    {   
        // Start Row
        for(int i=startCol;i<=endCol;i++,j++)
        {
            matrix[startRow][i]=j;
        }
        startRow++;
        
        // endCol
        for(int i=startRow;i<=endRow;i++,j++)
        {
            matrix[i][endCol]=j;
        }
        endCol--;

        // endRow
        if(startRow<endRow)
        {
            for(int i=endCol;i>=startCol;i--,j++)
            {
                matrix[endRow][i]=j;
            }
            endRow--;
        }


        // startCol
        if(startCol<endCol)
        {
            for(int i=endRow;i>=startRow;i--,j++)
            {
               matrix[i][startCol]=j;
            }
            startCol++;
        }
        
    }
       return matrix;
    }
};
