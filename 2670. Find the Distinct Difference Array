class Solution {
public:
   int distinct(int pre, int suf,vector<int>&nums)
   {
       int ans=0;
       set<int>s1,s2;
       for(int i=0;i<=pre;i++)
       {
         s1.insert(nums[i]);
       }
       for(int j=suf;j<nums.size();j++)
       {
            s2.insert(nums[j]);
       }
       ans = s1.size() - s2.size();
       return ans;
   }
    vector<int> distinctDifferenceArray(vector<int>& nums) {
        vector<int>res;
        for(int i=0;i<nums.size();i++)
        {
            res.push_back(distinct(i,i+1,nums));
        }
        return res;
    }
};
