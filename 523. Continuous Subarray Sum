class Solution {
public:
    bool checkSubarraySum(vector<int>& nums, int k) {
        int ps = 0;
        map<int,int>mp;
        for(int i=0;i<nums.size();i++)
        {
            ps += nums[i];
            ps %= k;
            if(ps==0 && i)
            {
                return true;
            }
            if(mp.find(ps)!=mp.end())
            {
                if(i-mp[ps]>1)
                {
                    return true;
                }
            }
            else{
                mp[ps]=i;
            }
        }
        return false;
    }
};
