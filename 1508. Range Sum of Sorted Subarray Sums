class Solution {
public:
    int rangeSum(vector<int>& nums, int n, int left, int right) {
        vector<int>sum;
        sum.push_back(0);
        for(int i=0;i<n;i++)
        {
            long long int temp=0;
            for(int j=i;j<n;j++)
            {
                temp += nums[j];
                sum.push_back(temp);
            }
        }
        long long int ans=0;
        sort(sum.begin(),sum.end());
        for(int i=left;i<=right;i++)
        {
            ans+=sum[i];
        }
        return ans%1000000007;
    }
};
