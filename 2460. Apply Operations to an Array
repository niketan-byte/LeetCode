class Solution {
public:
    vector<int> applyOperations(vector<int>& nums) {
      for(int i=0;i<nums.size()-1;i++)
      {
          if(nums[i]==nums[i+1])
          {
             nums[i] *= 2;
             nums[i+1]=0;
          }
      }
    //   stable_sort(nums.begin(), nums.end(), [](int a, int b) { return !a < !b; });
    int i=0;
    for(auto n:nums)
    {
 if(n!=0)
 {
     nums[i++]=n;
 }
    }
    while(i!=nums.size())
    {
        nums[i++]=0;
    }
      return nums;  
    }
};
