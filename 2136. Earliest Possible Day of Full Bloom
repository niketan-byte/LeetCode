class Solution {
public:
    int earliestFullBloom(vector<int>& pt, vector<int>& gt) {
        vector<pair<int,int>>v;
        for(int i=0;i<gt.size();i++)
        {
            v.push_back({gt[i],pt[i]});
        }
        sort(v.begin(),v.end());
        int cnt=0,ma=0;
        for(int i=pt.size()-1;i>=0;i--)
        {
            int a=v[i].first;
            int b=v[i].second;
            ma = max(ma,a+b+cnt);
            cnt+=b;
        }
        return ma;
    }
};
