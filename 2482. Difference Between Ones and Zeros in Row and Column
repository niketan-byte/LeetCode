class Solution {
public:
    vector<vector<int>> onesMinusZeros(vector<vector<int>>& grid) {
        vector<vector<int>>ans;

        vector<pair<int,int>>row,col;
        for(int i=0;i<grid.size();i++)
        {
            int onesRow=0;
            int zeroRow=0;
            for(int j=0;j<grid[0].size();j++)
            {
                if(grid[i][j]==1)
                {
                    onesRow++;
                }
                else{
                    zeroRow++;
                }
            }
            row.push_back(make_pair(zeroRow,onesRow));
        }
        for(int i=0;i<grid[0].size();i++)
        {
            int onesCol=0;
            int zeroCol=0;
            for(int j=0;j<grid.size();j++)
            {
                if(grid[j][i]==1)
                {
                    onesCol++;
                }
                else{
                    zeroCol++;
                }
            }
            col.push_back(make_pair(zeroCol,onesCol));
        }

        for(int i=0;i<grid.size();i++)
        {
            vector<int>res;
            for(int j=0;j<grid[0].size();j++)
            {
                int ele = 0;
                int a = row[i].second;
                int b = col[j].second;
                int c = row[i].first;
                int d = col[j].first;
                ele = a+b-c-d;
                res.push_back(ele);
            }
            ans.push_back(res);
        }
        return ans;
    }
};
