class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        // int ans=0,l=0;
        // unordered_map<char,int>mp;
        // for(int i=0;i<s.size();i++)
        // {
        //     if(mp.find(s[i])!=mp.end())
        //     {  
        //         l=max(l,mp[s[i]]+1);
        //         ans = max(ans,i-l+1);
        //         mp[s[i]]=i;

        //     }
        //     else{
        //         mp[s[i]]=i;
        //         ans = max(ans,i-l+1);
        //     }
        // }


        int ans=0,l=0,r=0;
        int n = s.size();
        vector<int>vec(256,0);
        while(r<n)
        {
            vec[s[r]]++;
            while(vec[s[r]]>1)
            {
                vec[s[l]]--;
                l++;
            }
            ans = max(ans,r-l+1);
            r++;
        }
return ans;
    }
};
