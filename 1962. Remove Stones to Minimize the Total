class Solution {
public:
    int minStoneSum(vector<int>& piles, int k) {
     priority_queue<int>pq;
     for(auto i:piles)
     {
         pq.push(i);
     }
    while(k--)
    {
        int i=pq.top();
        pq.pop();
        pq.push(i-i/2);
    }
    int sum=0;
    while(pq.size())
    {
        int n = pq.top();
      sum += n;
      pq.pop();
    }
    return sum;
    }
};
