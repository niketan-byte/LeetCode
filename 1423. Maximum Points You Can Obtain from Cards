class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        if(k==cardPoints.size())
        {  
            return accumulate(cardPoints.begin(),cardPoints.end() , 0);
        }
        int curr=0;
        int res=0;
        for(int i=0;i<k;i++)
        {
            res += cardPoints[i];
        }
        curr=res;
        
        for(int i=k-1;i>=0;i--)
        {
            curr -= cardPoints[i];
            curr += cardPoints[cardPoints.size()-k+i];
            res = max(curr,res);
        }
        return res;
    }
};
