class Solution {
public:
    int minFlipsMonoIncr(string s) {
      int cnt1=0;
      int cntflip=0;
      for(int i=0;i<s.size();i++)
      {
          if(s[i]=='1')
          {
            cnt1++;
          }
          else{
              cntflip++;
              cntflip = min(cnt1,cntflip);
          }
      }
      return cntflip;
    }
};
