class Solution {
public:
    int findMaxLength(vector<int>& nums) {
    int n=nums.size();
    int sum=0;
    int res=0;
    map<int,int>mp;
    for(int i=0;i<n;i++)
    {
       sum += (nums[i]==0)?-1:1;
        auto it = mp.find(sum);
        if(sum==0 && res<i+1)
        {
            res=i+1;
    }
        else if(it!=mp.end())
        {
            if(res<i-it->second)
            {
                res=i-it->second;
            }
        }
        else if(it == mp.end())
        {
            mp.insert({sum,i});
        }
    }
        return res;
    }
};
