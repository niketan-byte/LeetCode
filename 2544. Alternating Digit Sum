class Solution {
public:
    int alternateDigitSum(int n) {
       string s = to_string(n);
       int sum = 0;
       int diff = 0;
       for(int i=0;i<s.size();i++)
       {
           sum += int(s[i]-'0');
           i++;
       } 
          for(int j=1;j<s.size();j++)
       {
           diff += int(s[j]-'0');
           j++;
       }
       return sum-diff; 
    }
};
