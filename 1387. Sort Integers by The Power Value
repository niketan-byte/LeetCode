class Solution {
public:
    int count(int x)
    {
        int cnt=0;
        while(x!=1)
        {
            // if(x==1)
            // {
            //     return cnt;
            //     break;
            // }
          if(x%2==0)
          {
              x=x/2;
              cnt++;
          }  
          else{
              x = x*3+1;
              cnt++;
          }
          
        }
        return cnt;
    }
    int getKth(int lo, int hi, int k) {
        vector<vector<int>>vec;
        for(int i=lo;i<=hi;i++)
        {
            int a = count(i);
            vector<int>v={a,i};
            vec.push_back(v);
        }
       sort(vec.begin(),vec.end());
        return vec[k-1][1];
    }
};
