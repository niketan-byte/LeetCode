class Solution {
public:
     vector<vector<int>> ans;
    void helper(TreeNode *root,int level){
        if(root==NULL)
        {
            return ;
        }
        if(ans.size()==level)
        {
            ans.push_back(vector<int>());
        }
        ans[level].push_back(root->val);
        helper(root->left,level+1);
        helper(root->right,level+1);
    }
    vector<vector<int>> levelOrder(TreeNode* root) {
        helper(root,0);
        return ans;
    }
};
