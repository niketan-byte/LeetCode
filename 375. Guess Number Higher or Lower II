class Solution {
public:
    int dp[201][201];
    int helper(long l,long r,long n)
    {
        if(l==r)
        {
            return 0;
        }
        if(dp[l][r])
        {
            return dp[l][r];
        }
        long ans=INT_MAX;
        for(long i=l;i<=r;i++)
        {
            long t1=0,t2=0,t3=0;
            t1=i;
            if(i>1)
            {
                t2=i+helper(l,i-1,n);
            }
            if(i<n)
            {
                t3 = i+helper(i+1,r,n);
            }
            ans = min(ans,max({t1,t2,t3}));
           
        }
         return dp[l][r]=ans;
    }
    int getMoneyAmount(int n) {
        return helper(1,n,n);
    }
};


