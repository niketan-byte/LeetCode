class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        // if(digits[digits.size()-1]!=9)
        // {
        //     digits[digits.size()-1] = digits[digits.size()-1] +1;
        // }
        // if(digits[digits.size()-1]==9)
        // {  
            for(int i=digits.size()-1;i>=0;i--)
            {
                if(digits[i]<9)
                {
                    digits[i]++;
                    return digits;
                }
               digits[i]=0; 
                // cout<<digits[i]<<" ";
            }
        digits[0]=1;
        digits.push_back(0);
        return digits;
       
    }
};



 
        
        
