class Solution {
public:
    vector<int> getSumAbsoluteDifferences(vector<int>& nums) {
        int n = nums.size();
        vector<int>pre(n,0);
        vector<int>suf(n,0);
        
        pre[0]=nums[0];
        for(int i=1;i<n;i++)
        {
            pre[i]=pre[i-1]+nums[i];
        }

        suf[n-1] = nums[n-1];

        for(int i=n-2;i>=0;i--)
        {
            suf[i] = suf[i+1]+nums[i];
        }

        vector<int>ans(n,0);
        for(int i=0;i<n;i++)
        {
            if(i==0){
                ans[i] = suf[i+1]-(n-i-1)*nums[i];
            }
            else if(n-i-1==0){
                ans[i] = i*nums[i]-pre[i-1];
            }
            else{
            ans[i] = i*nums[i]-pre[i-1]+suf[i+1]-(n-i-1)*nums[i];
            }
        }
        return ans;
    }
};
