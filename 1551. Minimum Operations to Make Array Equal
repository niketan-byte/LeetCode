class Solution {
public:
    int minOperations(int n) {
if(n & 1){ // Odd Case
		int N = (n - 1) / 2;  // number of elements before mid element
		return N * (N + 1); 
	}
	int N = n / 2;  // number of elements before mean of mid elements
	return N * N; 
    }
};

// 1   0
// 2   1
// 3   2
// 4   4
// 5   6
// 6   9
// 7   12
// 8   16
// 9   20
// 10  25
// 11  30
// 12  36
