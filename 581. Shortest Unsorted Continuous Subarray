class Solution {
public:
    int findUnsortedSubarray(vector<int>& nums) {
        int least=INT_MAX;
        int mx = INT_MIN;
        int left=0,right=0;
        for(int i=nums.size()-1;i>=0;i--)
        {
            least = min(least,nums[i]);
            if(least!=nums[i])
            {
                left=i;
            }
        }
         for(int i=0;i<nums.size();i++)
        {
            mx = max(mx,nums[i]);
            if(mx!=nums[i])
            {
                right=i;
            }
        }
        if(right==left)
        {
            return 0;
        }
        return right-left+1;
    }
};
