class Solution {
public:
    vector<vector<int>> groupThePeople(vector<int>& g) {
        vector<vector<int>>ans;
        map<int,vector<int>>mp;
        for(int i=0;i<g.size();i++)
        {
            if(mp.count(g[i])>0){
            mp[g[i]].push_back(i);
            }
            else{
                mp[g[i]] = vector<int>{i};
            }
            if(mp[g[i]].size()==g[i])
            {
                vector<int>v;
                ans.push_back(mp[g[i]]);
                mp.erase(g[i]);
            }
        }
        return ans;
    }
};
