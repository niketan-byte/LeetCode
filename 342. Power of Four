class Solution {
public:
    bool isPowerOfFour(int n) {
        
     if(n>0 && ((n)&(n-1))==0 && (n-1)%3==0)
     {
         return true;
     }
        return false;
    }
};


class Solution {
public:
    bool isPowerOfFour(int n) {
        if(n<=0)
        {
            return 0;
        }
        double x = log(n)/log(4);
        return (x==int(x));
        
    }
};
