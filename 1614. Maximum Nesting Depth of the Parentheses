class Solution {
public:
    int maxDepth(string s) {
        int ans =0;
        stack<char>st;
        int curr=0;
        for(int i=0;i<s.size();i++)
        {
            if(s[i]=='(')
            {
                st.push(s[i]);
                curr++;
                ans = max(curr,ans);
            }
            if(s[i]==')' && !st.empty())
            {
                st.pop();
                curr--;
                ans=max(curr,ans);

            }
        }
        return ans;
    }
};
